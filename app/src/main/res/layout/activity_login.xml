<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sai.onlineeducation.login"
    android:background="@mipmap/loginbg">

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/username"
        android:hint="username"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_above="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="password"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/username" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/signup"
        android:src="@mipmap/signup"
        android:background="#ffffff"
        android:text="sign up its free"
        android:textStyle="bold"
        android:textColor="#ff833b"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="73dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/login"
        android:src="@mipmap/login"
        android:text="sign in"
        android:textColor="#ffffff"
        android:layout_above="@+id/signup"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp"
        android:layout_alignEnd="@+id/signup"
        android:background="#00ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Don&apos;t you have account?"
        android:id="@+id/textView"
        android:textColor="#748ee5"
        android:layout_above="@+id/signup"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp" />

</RelativeLayout>
